<Window
    x:Class="CopilotTaskbarApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CopilotTaskbarApp"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:CopilotTaskbarApp.Controls"
    mc:Ignorable="d">

    <Grid Background="Transparent" CornerRadius="8">
        <Grid.Resources>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
            <Style TargetType="controls:MarkdownTextBlock">
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
            
            <x:Double x:Key="StandardFontSize">16</x:Double>
            <x:Double x:Key="SmallFontSize">13</x:Double>
            <x:Double x:Key="HeaderFontSize">16</x:Double>
            
            <Style x:Key="SubtlerButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter x:Name="ContentPresenter"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            CornerRadius="{TemplateBinding CornerRadius}"
                                            Padding="{TemplateBinding Padding}"
                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SubteButtonPointerOverBrush}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SubteButtonSimplePressedBrush}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <PointerDownThemeAnimation TargetName="ContentPresenter"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </ContentPresenter>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <SolidColorBrush x:Key="SubteButtonPointerOverBrush" Color="#19000000"/>
            <SolidColorBrush x:Key="SubteButtonSimplePressedBrush" Color="#33000000"/>
            
            <local:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="TitleBarDragRegion" Background="Transparent" Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
           
            <Button Grid.Column="1" 
                    Click="MinimizeButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="46" Height="32"
                    CornerRadius="0"
                    IsTabStop="False"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <Button.Content>
                    <FontIcon Glyph="&#xE921;" FontSize="10"/>
                </Button.Content>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemListLowColor}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemListMediumColor}"/>
                </Button.Resources>
            </Button>
        </Grid>

        <RelativePanel  Grid.Row="1">
            <ScrollViewer x:Name="ChatScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      
                      RelativePanel.AlignTopWithPanel="True"
                      RelativePanel.Above="chatInput"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                        Margin="8,8,0,0"
                      
                      >
                <ListView x:Name="ChatListView"
                      ItemsSource="{x:Bind _messages, Mode=OneWay}" 
                      SelectionMode="None"
                      IsItemClickEnabled="False"
                      Padding="12,4,24,16"
                      Background="Transparent"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.HorizontalScrollMode="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" 
                              Width="32" Height="32"
                              Margin="8,0,16,0"
                              VerticalAlignment="Top">

                                    <Image Source="{Binding AvatarImagePath}"
                                   Width="28" 
                                   Height="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Stretch="Uniform"
                                   Visibility="{Binding ImageVisibilityFixed}"/>

                                    <Border CornerRadius="16"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Visibility="{Binding InitialVisibility}">
                                        <TextBlock Text="{Binding UserInitial}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                                    </Border>
                                </Grid>

                                <StackPanel Grid.Column="1" Spacing="2" Margin="0,0,12,0">
                                    <TextBlock Text="{Binding RoleDisplay}" 
                                       FontWeight="SemiBold"
                                       FontSize="{StaticResource HeaderFontSize}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                                    <controls:MarkdownTextBlock Text="{Binding Content, Mode=OneWay}" 
                                                      TextWrapping="Wrap"
                                                      IsTextSelectionEnabled="True"
                                                      Background="Transparent"
                                                      FontSize="{StaticResource StandardFontSize}"
                                                      Margin="0,2,0,8"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding FormattedTime}" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           FontSize="11"
                                           VerticalAlignment="Center"/>

                                        <Button Grid.Column="1"
                                        Style="{StaticResource SubtlerButtonStyle}"
                                        Click="CopyButton_Click"
                                        Visibility="{Binding IsAssistantMessage, Converter={StaticResource BoolToVisConverter}}"
                                        Padding="4"
                                        CornerRadius="4"
                                        ToolTipService.ToolTip="Copy to clipboard">
                                            <FontIcon Glyph="&#xE8C8;" FontSize="12"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </ScrollViewer>

            <!-- Chat input box fixed at the bottom -->
            <c:ChatInputControl
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            HorizontalAlignment="Stretch"
            Margin="8,0,8,8"
            x:Name="chatInput">
                <c:ChatInputControl.Shadow>
                    <ThemeShadow/>
                </c:ChatInputControl.Shadow>
            </c:ChatInputControl>
        </RelativePanel>
    </Grid>
</Window>
